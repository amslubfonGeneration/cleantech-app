<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CleanTech - Recyclage Intelligent</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/m.css" />
</head>
<style>
:root {
--primary: #10b981;--primary-dark: #059669;
--primary-light: #d1fae5;
--secondary: #3b82f6;
--secondary-dark: #2563eb;
--accent: #f59e0b;
--dark: #1f2937;
--light: #f9fafb;
}
.dashboard-card {
background: white;
border-radius: 15px;
box-shadow: 0 4px 20px rgba(0,0,0,0.08);
transition: all 0.3s ease;
border: none;
overflow: hidden;
}
.dashboard-card:hover {
transform: translateY(-5px);
box-shadow: 0 8px 30px rgba(0,0,0,0.12);
}
.stat-card {
background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
color: white;
border-radius: 15px;
padding: 1.5rem;
}
.nav-pills-custom .nav-link {
border-radius: 10px;
margin: 0.2rem 0;
transition: all 0.3s ease;
}
.nav-pills-custom .nav-link.active {
background: var(--primary);
color: white;
}
</style>
</head>
<body>
<%- include('../../partials/navbar', { user}) %>

  <br>
  <main style="padding-top: 80px;">
<div class="container py-5">
<div class="row">
<div class="col-12">
<div class="d-flex justify-content-between align-items-center mb-5">
<div>
<h1 class="h2 fw-bold text-dark mb-2">Analytics CleanTech</h1>
<p class="text-muted">Analysez les performances de votre plateforme</p>
</div>
<div class="bg-primary text-white rounded-pill px-3 py-1">
<small><i class="fas fa-chart-bar me-1"></i>Analytics</small>
</div>
</div></div>
</div>
<!-- Filtres -->
<div class="row mb-5">
<div class="col-12">
<div class="dashboard-card p-4">
<h4 class="fw-bold mb-4">üìä Filtres d'analyse</h4>
<form method="get" class="row g-3">
<div class="col-md-3">
<label class="form-label fw-bold">P√©riode</label>
<select name="period" class="form-select">
<option value="week" <%= filters.period==='week'?'selected':'' %>>7 derniers jours</option>
<option value="month" <%= filters.period==='month'?'selected':'' %>>30 jours</option>
<option value="year" <%= filters.period==='year'?'selected':'' %>>12 mois</option>
</select>
</div>
<div class="col-md-3">
<label class="form-label fw-bold">R√©gion</label>
<select name="region" class="form-select">
<option value="all">Toutes les r√©gions</option>
<option value="Cotonou" <%= filters.region==='Cotonou'?'selected':'' %>>Cotonou</option>
<option value="Porto-Novo" <%= filters.region==='Porto-Novo'?'selected':'' %>>Porto-Novo</option>
</select>
</div>
<div class="col-md-3">
<label class="form-label fw-bold">Type de d√©chet</label>
<select name="waste_type" class="form-select">
<option value="all">Tous les types</option>
<option value="plastique" <%= filters.waste_type==='plastique'?'selected':'' %>>Plastique</option><option value="m√©tal" <%= filters.waste_type==='m√©tal'?'selected':'' %>>M√©tal</option>
<option value="papier" <%= filters.waste_type==='papier'?'selected':'' %>>Papier</option>
</select>
</div>
<div class="col-md-3 d-flex align-items-end">
<button type="submit" class="btn btn-primary w-100">
<i class="fas fa-filter me-2">Appliquer</i>
</button>
</div>
</form>
</div>
</div>
</div>
<!-- Statistiques -->
<div class="row mb-5">
<div class="col-md-6 mb-4">
<div class="stat-card text-white">
<div class="d-flex justify-content-between align-items-start">
<div>
<h3 class="h2 fw-bold mb-1"><%= stats.recycled || 0 %> kg</h3>
<p class="mb-0">D√©chets recycl√©s</p>
</div>
<div class="bg-white bg-opacity-20 rounded-circle p-3">
<i class="fas fa-recycle fa-lg"></i>
</div>
</div>
</div>
</div>
<div class="col-md-6 mb-4"><div class="stat-card text-white" style="background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);">
<div class="d-flex justify-content-between align-items-start">
<div>
<h3 class="h2 fw-bold mb-1"><%= stats.deposits || 0 %></h3>
<p class="mb-0">D√©p√¥ts effectu√©s</p>
</div>
<div class="bg-white bg-opacity-20 rounded-circle p-3">
<i class="fas fa-box fa-lg"></i>
</div>
</div>
</div>
</div>
</div>
<!-- Challenges -->
<div class="row">
<div class="col-12">
<div class="dashboard-card p-4">
<h4 class="fw-bold mb-4">üî• Challenges en cours</h4>
<% if (challenges.length === 0) { %>
<div class="text-center py-4">
<i class="fas fa-trophy fa-3x text-muted mb-3"></i>
<p class="text-muted">Aucun challenge en cours</p>
</div>
<% } else { %>
<div class="table-responsive">
<table class="table table-hover">
<thead class="table-light">
<tr>
<th>Nom</th>
<th>Sponsor</th>
<th>Participants</th><th>Bonus distribu√©</th>
<th>Actions</th>
</tr>
</thead>
<tbody>
<% challenges.forEach(c => { %>
<tr>
<td>
<strong><%= c.name %></strong>
</td>
<td><%= c.sponsor %></td>
<td>
<span class="badge bg-primary"><%= c.participants %></span>
</td>
<td>
<span class="text-success fw-bold"><%=c.total_bonus %> pts</span>
</td>
<td>
<a href="/challenges/<%= c.id %>/participants" class="btn btn-outline-info btn-sm">
<i class="fas fa-users me-1">Voir</i>
</a>
</td>
</tr>
<% }) %>
</tbody>
</table>
</div>
<% } %>
</div>
</div>
</div>
</div>
</main>


<%- include('../../partials/footer') %>