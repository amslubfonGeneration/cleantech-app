<!-- Tableau complet -->
<div class="table-responsive">
<table class="table table-hover">
<thead class="table-light">
<tr>
<th width="80">Rang</th>
<th>Nom</th>
<th>Email</th>
<th>Filleuls</th>
</tr>
</thead>
<tbody>
<% rows.forEach((r, index) => { %>
<tr class="<%= index < 3 ? 'table-warning' :
'' %>">
<td>
<div class="d-flex align-items-center">
<span class="badge bg-<%= index === 0 ?
'warning' : index === 1 ? 'secondary' : index === 2 ? 'warning'
: 'primary' %> me-2">
<%= index + 1 %>
</span>
<% if (index < 3) { %><i class="fas fa-<%= index === 0 ? 'crown' : index === 1 ? 'medal' : 'award' %> text-<%= index === 0 ?
'warning' : index === 1 ? 'secondary' : 'warning' %>"></i>
<% } %>
</div>
</td>
<td>
<strong><%= r.name %></strong>
</td>
<td><%= r.email %></td>
<td>
<span class="badge bg-success rounded-pil
l">
<%= r.filleuls %> filleul(s)
</span>
</td>
</tr>
<% }) %>
</tbody>
</table>
</div>
<!-- Pagination -->
<% if (totalPages > 1) { %>
<nav class="mt-4">
<ul class="pagination justify-content-center">
<% for (let i = 1; i <= totalPages; i++) { %>
<li class="page-item <%= i === page ? 'active'
: '' %>">
<a class="page-link" href="/leaderboard/parr
ainage?page=<%= i %>">
<%= i %>
</a>
</li>
<% } %>
</ul>
</nav><% } %>
